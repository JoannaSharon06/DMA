#include <stdio.h>

int main(void) {
  int *arr;
  int evensum=0,oddsum=0;
  int size;
  printf("Enter the size:");
  scanf("%d",&size);
  arr=(int*)malloc(size*sizeof(int));
  printf("Enter the elements of the array: ");
  for(int i=0;i<size;i++)
    {
      scanf("%d",arr+i);
      if(*(arr+i)%2==0)
      {
        evensum+=*(arr+i);
      }
      else
      {
        oddsum+=*(arr+i);
      }
    }
  printf("The even sum is %d\n",evensum);
  printf("The odd sum is %d",oddsum);
  return 0;
}
