#include <stdio.h>

int main(void) {
  int *arr;
  int sum=0;
  int size;
  printf("Enter the size:");
  scanf("%d",&size);
  arr=(int*)malloc(size*sizeof(int));
  printf("Enter the elements of the array: ");
  for(int i=0;i<size;i++)
    {
      scanf("%d",arr+i);
      sum+=*(arr+i);
    }
  printf("The sum is %d",sum);
  return 0;
}
