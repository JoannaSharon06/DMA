#include <stdio.h>
#include<stdlib.h>

int main(void) {
  int *arr;
  int i,j;
  int size;
  printf("Enter the size:");
  scanf("%d",&size);
  arr=(int*)malloc(size*sizeof(int));
  printf("Enter the elements of the array: ");
  for(int i=0;i<size;i++)
    {
      scanf("%d",arr+i);
    }
  for (i = 0; i < size; ++i) 
  {
    for (j = i + 1; j < size; ++j)
      {
        if (*(arr+i) > *(arr+j)) 
          {
            int a =  *(arr+i);
            *(arr+i) = *(arr+j);
            *(arr+j) = a;
          }
      }
  }
  printf("The sorted array is ");
  for(int i=0;i<size;i++)
  {
    printf("%d\t",*(arr+i));
  }
  return 0;
}
